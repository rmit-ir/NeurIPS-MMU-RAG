FROM docker.io/python:3.12.12-slim

# Install uv
COPY --from=ghcr.io/astral-sh/uv:0.9.0 /uv /uvx /usr/local/bin/

# Set working directory
WORKDIR /app

# pkg-config: needed for Rust compiler to find libssl-dev
RUN apt update \
    && apt install -y curl numactl build-essential pkg-config libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy uv configuration files
COPY ./pyproject.toml ./uv.lock ./.python-version ./

# Install dependencies in a virtual environment
RUN mkdir ./src; uv sync --frozen --no-cache; rm -rf ./src

# Copy source code
COPY ./src ./src

# Run again with source code
RUN uv sync --frozen --no-cache

# Expose port
EXPOSE 8900

# Set environment variables
ENV PYTHONPATH=/app/src
ENV UV_SYSTEM_PYTHON=1

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8900/health/')" || exit 1

# Run the application
CMD ["uv", "run", "--frozen", "fastapi", "run", "src/apis/lite_router.py", "--host", "0.0.0.0", "--port", "8900"]
